<main>
 <div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <h2>User info</h2>
      <tbody>
       <tr>
        <td><%= image_tag @user.get_profile_image %></td>
        <td>name</td>
        <%= @user.name %>
        <td>introduction</td>
        <%= @user.introduction %>
       </tr>
      </tbody>

      <div class="row">
       <%= link_to edit_user_path(@user), class:"btn btn-outline-secondary btn-block" do %>
        <i class="fas fa-user-cog"></i>
       <% end %>
       <h2 class="mt-3">New book</h2>
      <%= form_with model: @newbook do |f| %>
        <div class="form-group">
         <label for="book_title">Title</label>
         <input class="form-control book_title" type="text" name="book[title]" id="book_title">
        </div>
        <div class="form-group">
         <label for="book_opinion">Opinion</label>
         <textarea class="form-control book_body" name="book[body]" id="book_body"></textarea>
        </div>
        <div class="form-group">
         <input type="submit" name="commit" value="Create Book" class="btn btn-success" data-disable-with="Create Book">
        </div>
      <% end %>
      </div>
    </div>

    <div class="col-md-8 offset-md-1">
     <h2>Book detail</h2>
     <table class="table table-hover table-inverse">
      <thead>
       <tr>
        <th></th>
        <th>Title</th>
        <th>Opinion</th>
        <th colspan="3"></th>
       </tr>
      </thead>

      <tbody>
       <tr>
         <td><%= image_tag @user.get_profile_image %>
          <br><%= link_to @user.name, user_path(@user.id) %>
          </td>
         <td><%= @book.title %></td>
         <td><%= @book.body %></td>
         <td>
           <% if @user == current_user %>
           <%= link_to "Edit", edit_book_path(@book.id), class:"btn btn-sm btn-success" %>
           <% end %>
         </td>
         <td>
           <% if @user == current_user %>
           <%= link_to "Destroy", book_path(@book.id), data:{confirm:'本当に消しますか？'}, method: :delete, class:"btn btn-sm btn-danger" %>
           <% end %>
         </td>
       </tr>
      </tbody>
     </table>
    </div>
  </div>
 </div>
</main>
