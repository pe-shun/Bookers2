<main>
  <div class="container">
   <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
  		 <h1>Editing Book</h1>

  		  <% if @book.errors.any? %>
        <%= @book.errors.count %>件のerrorが発生しました
         <ul>
         <% @book.errors.full_messages.each do |message| %>
         <li><%= message %></li>
       <% end %>
         </ul>
       <% end %>

      <div class="form-group">
       <%= form_with model: @book do |f| %>
        <div class="form-group">
         <label for="book_title">Title</label>
         <%= f.text_area :title, autofocus: true, class:"form-control"%>
        </div>
        <div class="form-group">
         <label for="book_opinion">Opinion</label>
         <%= f.text_area :body, autofocus: true, class:"form-control"%>
        </div>
        <div class="form-group">
         <%= f.submit 'Update Book',class:"btn btn-sm btn-success" %>
        </div>
      <% end %>
      </div>
     </div>
   </div>
    <div class="center">
     <td><%= link_to "Show", book_path %></td>
       |
  		 <td><%= link_to "Back", books_path %></td>
  		</div>
   </div>
</main>
