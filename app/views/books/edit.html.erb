<main>
  <div class="container">
   <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
  		 <h1>Editing Book</h1>
      <div class="form-group">
       <%= form_with model: @book do |f| %>
        <div class="form-group">
         <label for="book_title">Title</label>
         <%= f.text_area :title, autofocus: true, class:"form-control"%>
        </div>
        <div class="form-group">
         <label for="book_opinion">Opinion</label>
         <%= f.text_area :body, autofocus: true, class:"form-control"%>
        </div>
        <div class="form-group">
         <%= f.submit 'Update Book',class:"btn btn-sm btn-success" %>
        </div>
      <% end %>
      </div>
     </div>
   </div>
    <div class="center">
      <a class="show" href="/books/:id">Show</a>
       |
  		  <a class="back" href="/books">Back</a>
  		 </div>
   </div>
</main>
