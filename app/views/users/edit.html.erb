<main>
  <div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
    <h2>User info</h2>
    <div class="form-group">
        
        <% if @user.errors.any? %>
        <%= @user.errors.count %>件のエラーが発生しました
         <ul>
         <% @user.errors.full_messages.each do |message| %>
         <li><%= message %></li>
       <% end %>
         </ul>
       <% end %>
       
      <%= form_with model: @user, url: user_path(@user.id), method: :patch do |f| %>
       <label for="inputName">Name</label>
       <%= f.text_field :name, autofocus: true, id:"inputName", class:"form-control"%>
       <label for="inputImage">Image</label>
       <%= f.file_field :profile_image, placeholder: "Image", accept: "image/*", class:"form-control-file" %>
       <label for="inputImage">Introduction</label>
       <%= f.text_field :introduction, placeholder: "Text", class:"form-control" %>
       <%= f.submit "Update User" %>
      <% end %>
     </div>
   </div>
  </div>
  </div>
</main>