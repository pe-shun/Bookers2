<main>
  <div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
    <h2>User info</h2>
    <div class="form-group">
      <%= form_with model: @user do |f| %>
       <label for="inputName">Name</label>
       <%= f.text_field :name, autofocus: true, id:"inputName", class:"form-control"%>
    </div>
     <div class="form-group">
       <label for="inputImage">Image</label>
       <%= f.file_field :profile_image, placeholder: "Image", accept: "image/*", class:"form-control-file" %>
     </div>
      <div class="form-group">
       <label for="inputImage">Introduction</label>
       <%= f.text_field :introduction, placeholder: "Text", class:"form-control" %>
      </div>
      <div class="form-group">
       <%= f.submit "Update User" %>
      </div>
      <% end %>
   </div>
  </div>
  </div>
</main>