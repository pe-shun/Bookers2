<main>
  <div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
    <h2>User info</h2>
    <div class="form-group">
      <%= form_with model: user_id do |f| %>
       <label for="inputName">Name</label>
       <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"Name"%>
       <label for="inputImage">Image</label>
       <%= f.file_field :profile_image, placeholder: "Image", accept: "image/*" %>
       <label for="inputImage">Introduction</label>
       <%= f.file_field :introduction, placeholder: "Text" %>
       <%= f.submit "Update User" %>
      <% end %>
     </div>
   </div>
  </div>
  </div>
</main>